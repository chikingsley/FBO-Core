{
  "openapi": "3.0.3",
  "info": {
    "title": "FBO Core API",
    "version": "1.0.0",
    "description": "Real-time emotion analysis and music playback API"
  },
  "servers": [
    {
      "url": "wss://api.hume.ai/v0/stream/models",
      "description": "Hume AI WebSocket Server"
    },
    {
      "url": "https://api.spotify.com/v1",
      "description": "Spotify API Server"
    }
  ],
  "paths": {
    "/face": {
      "get": {
        "tags": ["Face Analysis"],
        "summary": "Stream face emotions",
        "description": "WebSocket endpoint for real-time face emotion detection",
        "parameters": [
          {
            "name": "apikey",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Your Hume AI API key"
          }
        ],
        "responses": {
          "101": {
            "description": "WebSocket connection established",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FaceResponse"
                }
              }
            }
          }
        }
      }
    },
    "/me/player": {
      "get": {
        "tags": ["Spotify Playback"],
        "summary": "Get Playback State",
        "description": "Get information about the user's current playback state",
        "security": [{ "spotify_auth": [] }],
        "responses": {
          "200": {
            "description": "Playback state retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PlaybackState"
                }
              }
            }
          }
        }
      }
    },
    "/me/player/play": {
      "put": {
        "tags": ["Spotify Playback"],
        "summary": "Start/Resume Playback",
        "description": "Start a new context or resume current playback",
        "security": [{ "spotify_auth": [] }],
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PlayRequest"
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Playback started successfully"
          }
        }
      }
    },
    "/me/player/pause": {
      "put": {
        "tags": ["Spotify Playback"],
        "summary": "Pause Playback",
        "description": "Pause the user's playback",
        "security": [{ "spotify_auth": [] }],
        "responses": {
          "204": {
            "description": "Playback paused successfully"
          }
        }
      }
    },
    "/prosody": {
      "get": {
        "tags": ["Voice Analysis"],
        "summary": "Stream voice prosody",
        "description": "WebSocket endpoint for real-time voice prosody analysis",
        "parameters": [
          {
            "name": "apikey",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Your Hume AI API key"
          }
        ],
        "responses": {
          "101": {
            "description": "WebSocket connection established",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProsodyResponse"
                },
                "example": {
                  "prosody": {
                    "predictions": [
                      {
                        "emotions": [
                          {
                            "name": "Confidence",
                            "score": 0.75
                          }
                        ],
                        "qualities": {
                          "pitch": 220.5,
                          "volume": 0.8
                        }
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Emotion": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the emotion"
          },
          "score": {
            "type": "number",
            "format": "float",
            "description": "Confidence score for the emotion"
          }
        }
      },
      "FaceResponse": {
        "type": "object",
        "properties": {
          "face": {
            "type": "object",
            "properties": {
              "predictions": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "emotions": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Emotion"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "PlaybackState": {
        "type": "object",
        "properties": {
          "device": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "is_active": { "type": "boolean" },
              "name": { "type": "string" }
            }
          },
          "is_playing": { "type": "boolean" },
          "item": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "name": { "type": "string" },
              "artists": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      },
      "PlayRequest": {
        "type": "object",
        "properties": {
          "context_uri": {
            "type": "string",
            "description": "Spotify URI of the context to play"
          },
          "uris": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Array of Spotify track URIs to play"
          },
          "position_ms": {
            "type": "integer",
            "description": "Position to start playback from"
          }
        }
      },
      "ProsodyResponse": {
        "type": "object",
        "properties": {
          "prosody": {
            "type": "object",
            "properties": {
              "predictions": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "emotions": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Emotion"
                      }
                    },
                    "qualities": {
                      "type": "object",
                      "properties": {
                        "pitch": {
                          "type": "number",
                          "description": "Fundamental frequency in Hz"
                        },
                        "volume": {
                          "type": "number",
                          "minimum": 0,
                          "maximum": 1,
                          "description": "Audio volume level"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "securitySchemes": {
      "spotify_auth": {
        "type": "oauth2",
        "flows": {
          "implicit": {
            "authorizationUrl": "https://accounts.spotify.com/authorize",
            "scopes": {
              "streaming": "Spotify playback SDK",
              "user-read-playback-state": "Read playback state",
              "user-modify-playback-state": "Control playback state"
            }
          }
        }
      }
    }
  }
}
